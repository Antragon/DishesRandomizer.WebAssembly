@page "/Meals"
<RadzenCard class="dialog">
    <h2>Meals</h2>
    <img class="meals-card__button clickable"
         src="images/plus.png"
         alt="plus.png"
         @onclick="AddMeal" />
    <div class="meals__container">
        @foreach (var meal in _mealsSelection) {
            <div class="meals-card">
                <RadzenTextBox class="meals-card__meal"
                               @ref="TextBoxRef"
                               Value="@meal.Name"
                               Placeholder="<Name your Meal>"
                               Change="name => MealChanged(meal.Id, name)" />
                <img class="meals-card__button clickable"
                     src="images/minus.png"
                     alt="minus.png"
                     @onclick="() => DeleteMeal(meal)" />
            </div>
        }
    </div>
    <RadzenPager class="meals__pager"
                 @ref="_pager"
                 Count="_count"
                 PageSize="_pageSize"
                 PageNumbersCount="5"
                 PageChanged="PageChanged" />
</RadzenCard>